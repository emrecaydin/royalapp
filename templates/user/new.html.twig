{% extends 'base.html.twig' %}

{% block title %}User | RoyalAPP{% endblock %}

{% block body %}

    <div class="container">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">User Registration</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="my-custom-class-for-errors">
                {% for error in form.vars.errors.form.getErrors(true) %}
                    <li>{{ error.message }}</li>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="pace-flash-error">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="pace-flash-success">
                        {{ message }}
                    </div>
                {% endfor %}

            </div>
            {{ form_start(form, {'attr': {'autocomplete': 'off', 'class': 'form-horizontal'}}) }}
            <div class="card-body">
                <div class="form-group row">
                    {{ form_label(form.name) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.email) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.password) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.password) }}
                    </div>
                    {# <div class="col-sm-12">
                        {{ form_errors(form.password) }}
                    </div> #}
                </div>
                <div class="form-group row">
                    {{ form_label(form.mobilePhone) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.mobilePhone) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.title) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.roles) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.roles) }}
                    </div>
                </div>
                {# <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck2">
                            <label class="form-check-label" for="exampleCheck2">Remember me</label>
                        </div>
                    </div>
                </div> #}
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {{ form_widget(form.save) }}
            </div>
            <!-- /.card-footer -->
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
