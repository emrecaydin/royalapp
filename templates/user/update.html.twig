{% extends 'base.html.twig' %}

{% block title %}User | RoyalAPP{% endblock %}

{% block body %}

    <div class="container">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">User Update</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="my-custom-class-for-errors">
                {% for error in form.vars.errors.form.getErrors(true) %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </div>
            {{ form_start(form, {'attr': {'autocomplete': 'off', 'class': 'form-horizontal'}}) }}
            <div class="card-body">
                <div class="form-group row">
                    {{ form_label(form.name) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {'value': userInfo.name}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.email) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email, {'value': userInfo.email}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.password) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.password) }}
                    </div>
                    {# <div class="col-sm-12">
                        {{ form_errors(form.password) }}
                    </div> #}
                </div>
                <div class="form-group row">
                    {{ form_label(form.mobilePhone) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.mobilePhone, {'value': userInfo.mobilePhone}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.title) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title, {'value': userInfo.title}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.roles) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.roles, {'value': userInfo.roles}) }}
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {{ form_widget(form.save, {'label':'Update'}) }}
            </div>
            <!-- /.card-footer -->
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
