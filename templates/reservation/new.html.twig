{% extends 'base.html.twig' %}

{% block title %}Reservation | RoyalAPP{% endblock %}

{% block body %}

    <div class="container">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Reservation Record</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="my-custom-class-for-errors">
                {% for error in form.vars.errors.form.getErrors(true) %}
                    <li>{{ error.message }}</li>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="pace-flash-error">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="pace-flash-success">
                        {{ message }}
                    </div>
                {% endfor %}

            </div>
            {{ form_start(form, {'attr': {'autocomplete': 'off', 'class': 'form-horizontal'}}) }}
            <div class="card-body">
                <div class="form-group row">
                    {{ form_label(form.name) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.email) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.description) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.description) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.mobilePhone) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.mobilePhone) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.reservationDate) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.reservationDate) }}
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {{ form_widget(form.save) }}
            </div>
            <!-- /.card-footer -->
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
